<?xml version="1.0" encoding="utf-8"?>
<com.hyc.eyepetizer.widget.PullToRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyc.eyepetizer.MainActivity">
    <RelativeLayout
        android:id="@id/head"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:text="123"
            android:id="@id/tv_remain"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.hyc.eyepetizer.widget.LoadingAnimView
            android:layout_below="@id/tv_remain"
            android:id="@id/loading"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@id/target"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</com.hyc.eyepetizer.widget.PullToRefreshView>
